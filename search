func search() {
	ctx := context.Background()
	esclient, err := GetESClient()
	if err != nil {
		fmt.Println("Error initializing : ", err)
		panic("Client fail ")
	}

	var fighters []fighter

	searchSource := elastic.NewSearchSource()
	searchSource.Query(elastic.NewMatchQuery("name", "Goku"))

	/* this block will basically print out the es query */
	queryStr, err1 := searchSource.Source()
	queryJs, err2 := json.Marshal(queryStr)

	if err1 != nil || err2 != nil {
		fmt.Println("[esclient][GetResponse]err during query marshal=", err1, err2)
	}
	fmt.Println("[esclient]Final ESQuery=\n", string(queryJs))
	/* until this block */

	searchService := esclient.Search().Index("goku").SearchSource(searchSource)

	searchResult, err := searchService.Do(ctx)
	if err != nil {
		fmt.Println("[ProductsES][GetPIds]Error=", err)
		return
	}

	for _, hit := range searchResult.Hits.Hits {
		var fighter fighter
		err := json.Unmarshal(*hit.Source, &fighter)
		if err != nil {
			fmt.Println("[Getting fighters][Unmarshal] Err=", err)
		}

		fighters = append(fighters, fighter)
	}

	if err != nil {
		fmt.Println("Fetching fight fail: ", err)
	} else {
		for _, s := range fighters {
			fmt.Printf("Fighter found Name: %s, Power: %d \n", s.Name, s.Power)
		}
	}
}